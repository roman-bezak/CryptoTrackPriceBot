{
  "name": "crypto-track-price-bot",
  "description": "Telegram bot for tracking cryptocurrency prices",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "start:dev": "cross-env NODE_ENV=development node dist/main.js",
    "test": "echo coming soon...",
    "format": "prettier --write .",
    "format:bash": "find scripts/ -name '*.sh' -type f -exec shfmt -i 2 -w {} \\;",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "ts:lint": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegraf",
    "prisma",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "Roman Bezak",
    "email": "r.bezak77@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/roman-bezak/CryptoTrackPriceBot"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
